# Ympäristö
NEXT_PUBLIC_ENV=production

# Analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=docflow.fi
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://eu.posthog.com

# Calendly
NEXT_PUBLIC_CALENDLY_URL=

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PRICE_STARTER=
NEXT_PUBLIC_STRIPE_PRICE_BUSINESS=
NEXT_PUBLIC_STRIPE_PRICE_PROFESSIONAL=

# Resend
RESEND_API_KEY=
EMAIL_FROM="DocFlow <noreply@docflow.fi>"
EMAIL_SALES="sales@docflow.fi"

# Supabase Auth (Auth MVP v0)
# See docs/SUPABASE_AUTH_CONFIG.md for setup instructions
SUPABASE_URL=                           # https://xxx.supabase.co
SUPABASE_SERVICE_ROLE=                  # Service role key (backend only)
SUPABASE_JWT_ISS=                       # https://xxx.supabase.co/auth/v1
SUPABASE_JWT_AUD=authenticated          # JWT audience
SUPABASE_AUTH_ENABLED=true              # Enable Supabase auth (set false for dev mode)

# Admin activity bus
ADMIN_BUS_TYPE=memory  # memory | redis | supabase
REDIS_URL=

# Frontend admin control plane
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
NEXT_PUBLIC_BACKEND_URL=
NEXT_PUBLIC_BACKEND_WS_URL=

# Sentry (Error Tracking & Performance Monitoring)
# See docs/SENTRY_SETUP.md for configuration
SENTRY_DSN=                                   # Backend Sentry DSN
SENTRY_ORG=docflow                            # Sentry organization slug
SENTRY_PROJECT=docflow-backend                # Sentry project slug
SENTRY_AUTH_TOKEN=                            # For release/sourcemap upload
SENTRY_RELEASE=                               # Git commit SHA (auto-set in CI)
SENTRY_TRACES_SAMPLE_RATE=0.1                 # 10% of transactions sampled
SENTRY_PROFILES_SAMPLE_RATE=0.1               # 10% CPU profiling (Team tier)

# reCAPTCHA / hCaptcha
NEXT_PUBLIC_RECAPTCHA_KEY=
RECAPTCHA_SECRET=