{
  "version": 2,
  "buildCommand": "cd frontend && npm run build",
  "devCommand": "cd frontend && npm run dev",
  "installCommand": "npm install && cd frontend && npm install",
  "framework": "nextjs",
  "regions": ["arn1"],
  "functions": {
    "frontend/app/api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/v1/:path*",
      "destination": "https://your-backend-url.onrender.com/api/v1/:path*"
    }
  ]
}

